QWidget {
    background-color: #1E1E1E;
    color: #E0E0E0;
    font-size: 12px;
}

QPushButton {
    background-color: #374145ff;
    color: #F5F5F5;
    border: 1px solid #4F4F4F;
    padding: 5px;
}

QPushButton:hover {
    background-color: #3A3A3A;
}

QListWidget, QTextEdit, QTableWidget {
    background-color: #121212;
    color: #E0E0E0;
    border: 1px solid #4F4F4F;
}
